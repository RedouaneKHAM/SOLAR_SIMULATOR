<style>
  .container {
    border: 2px solid transparent;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .container:hover {
    border-color: #008000;
    box-shadow: 0 0 15px rgba(0, 128, 0, 0.5);
  }

  input[type="text"], select {
    transition: border-color 0.9s ease;
    border: 1px solid #ced4da;
  }

  input[type="text"]:focus, select:focus {
    border-color: #008000;
  }
</style>

<div class="container my-3 p-4 bg-white rounded" style="max-width: 800px;"  data-controller="submit-alert">
  <%= simple_form_for @contact, html:{ data: { action: "submit->submit-alert#fire"}} do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :phone_number %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :message %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 my-3 text-end">
        <%= f.button :submit, class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
