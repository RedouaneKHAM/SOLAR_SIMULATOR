<style>
  .carde {
    transition: box-shadow 0.9s ease;
    border: 2px solid transparent;
  }

  .carde:hover {
    box-shadow: 0 0 10px rgba(0, 128, 0, 0.5);
    border-color: #008000;
  }
</style>
<div class="container mt-3 ">
  <div class="carde text-center rounded shadow bg-white">
    <div class="card-body d-flex w-100">
      <div class="w-50">
        <canvas data-controller="chart"
        data-chart-chartdata1-value="<%= @chartdata1.to_json %>"
        data-chart-chartdata2-value="<%= @chartdata2.to_json %>"
        data-chart-chartdata3-value="<%= @chartdata3.to_json %>"></canvas>
      </div>
      <div class="w-50">
        <h1 class="carde-title">Your Report</h1>
        <% @report.simulation %>
        <p>Votre consommation journalière <%= @report.daily_consumption %> Wh/day</p>
        <p>Le kit solaire proposé a une
        <%= render partial: "power", locals: { report: @report } %></p>
      </div>
  </div>
</div>
</div>
