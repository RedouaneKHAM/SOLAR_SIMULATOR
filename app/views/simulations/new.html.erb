  <h1>Simulations#new</h1>
  <p>Find me in app/views/simulations/new.html.erb</p>
<div class="container my-3 p-4 bg-white rounded">

  <%= simple_form_for @simulation do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :type_of_property, collection: ['Maison avec toiture', 'Maison sans toiture', 'Industrie', 'Ferme', 'Villa', 'Appartement'], include_blank: false %>
      </div>
      <div class="col-md-6">
        <%= f.input :region, collection: ['Tanger-Tétouan-Al Hoceima', 'Oriental', 'Fès-Meknès', 'Villa', 'Rabat-Salé-Kénitra', 'Beni Mellal-Khénifra', 'Casablanca-Settat', 'Marrakech-Safi', 'Drâa-Tafilalet', 'Souss-Massa', 'Guelmim-Oued Noun', 'Laâyoune-Saguia al Hamra', 'Dakhla-Oued Ed-Dahab'], include_blank: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= f.input :month_fst %>
      </div>
      <div class="col-md-3">
        <%= f.input :month_scd %>
      </div>
      <div class="col-md-3">
        <%= f.input :month_trd %>
      </div>
      <div class="col-md-3">
        <%= f.input :month_fth %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 my-3 text-end">
        <%= f.button :submit, class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
